<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@MoviesLibrary.Common.Globals.ApplicationConstants.Name</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Movies", "All", "Movies", new { area = "Users" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Articles", "All", "Articles", new { area = "Users" }, new { @class = "navbar-brand" })</li>
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Add Movie", "Create", "Movies", new { area = "Administration" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Add Article", "Create", "Articles", new { area = "Administration" }, new { @class = "navbar-brand" })</li>
                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @if (this.TempData[MoviesLibrary.Common.Globals.ApplicationConstants.ErrorMessageKey] != null)
        {
            <div class="alert alert-danger">
                <p>
                    @this.TempData[MoviesLibrary.Common.Globals.ApplicationConstants.ErrorMessageKey]
                </p>
            </div>
        }

        @if (this.TempData[MoviesLibrary.Common.Globals.ApplicationConstants.SuccessMessageKey] != null)
        {
            <div class="alert alert-success">
                <p>
                    @this.TempData[MoviesLibrary.Common.Globals.ApplicationConstants.SuccessMessageKey]
                </p>
            </div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @MoviesLibrary.Common.Globals.ApplicationConstants.Name</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
